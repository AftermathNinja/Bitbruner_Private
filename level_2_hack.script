var target = 'iron-gym';

var moneyThresh = getServerMaxMoney(target) * 0.3;

var securityThresh = getServerMinSecurityLevel(target) + 5;

if (fileExists("level_1_hack.script", target)) {
	kill("level_1_hack.script", target);
}

brutessh(target);
nuke(target);

while (true) {
	if (getServerSecurityLevel(target) > securityThresh) {
		weaken(target);
	}
	else if (getServerMoneyAvailable(target) < moneyThresh) {
		grow(target);
	}
	else {
		hack(target);
	}
}